@model resWebApp.Models.UserModel
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Log in</title>
    <link rel="stylesheet" type="text/css" href=@Url.Content( "/en/css/bootstrap.css") />
    <link rel="stylesheet" type="text/css" href="~/en/css/font-awesome.css"/>
    <link rel="stylesheet" type="text/css" href="~/en/css/style.css"/>
</head>

<body class="login-bg">
    <section id="login">
        <div class="container">
            <div class="log-space">
                <div class="logo text-center mb-4">
                    <img src=@Url.Content("~/en/images/increase-logo01.png") alt="">
                </div>
                <!-- Start Contact Form -->
                <form role="form" method="post">

                    <div class="form-group">
                        <input type="text" class="form-control input-lg" name="username" placeholder="Username" />
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control input-lg" name="password" placeholder="Password" />
                    @if (ViewBag.message != "")
                    {
                        <label class="form-control is-invalid">@ViewBag.message</label>
                    }
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe" value="@Model.RememberMe">
                        <label class="form-check-label" for="RememberMe" >Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-dark btn-block">Log in</button>
                </form>
                <!-- End Contact Form -->
            </div>
        </div>
    </section>
    <footer>
        <div class="container">
            <hr>
            <div class="row">
                <div class="col-12 copyright">
                    <p>2022@All Right Reserved for Increase</p>
                </div>
            </div>
        </div>
    </footer>


    <script src=@Url.Content("~/en/js/jquery-2.1.3.min.js")></script>
    <script src=@Url.Content("~/en/js/popper.min.js")></script>
    <script src=@Url.Content("~/en/js/bootstrap.min.js")></script>
    <script src=@Url.Content("~/en/js/main.js")></script>
</body>
</html>


<script>
    $("input[type=checkbox]").change(function () {
    if ($(this).prop("checked")) {
        $(this).val(true);
    } else {
        $(this).val(false);
    }
});
</script>
